<div class="mb-3" style="width: 350px">
  
  <%= form_with(model: heading) do |form| %>
    <% if heading.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(heading.errors.count, "error") %> prohibited this heading from being saved:</h2>

        <ul>
          <% heading.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="row mb-2">
      <div class="col">
        <%= form.text_field :title, placeholder: "Title", class: "form-control" %>
      </div>
    </div>

    <div class="row mb-2">
      <div class="col">
        <%= form.label :heading_state_id, class: "col-form-label" %>
      </div>
      <div class="col-auto">
        <%= form.collection_select :heading_state_id, HeadingState.all, :id, :name, include_blank: true, class: "form-control" %>
      </div>
    </div>

    <div class="row mb-2">
      <div class="col">
        <%= form.label :deadline, class: "col-form-label" %>
      </div>
      <div class="col-auto">
        <%= form.datetime_field :deadline, class: "form-control" %>
      </div>
    </div>

    <div class="row mb-2">
      <div class="col">
        <%= form.label :scheduled, class: "col-form-label" %>
      </div>
      <div class="col-auto">
        <%= form.datetime_field :scheduled, class: "form-control" %>
      </div>
    </div>

    <div class="mb-2">
      <%= form.text_area :body, placeholder: "Body", class: "form-control", rows: 10, data: { controller: "heading-textarea", action: "keyup->heading-textarea#processInput" } %>
    </div>

    <%= form.hidden_field :parent_id, value: parent_id %>

    <div>
      <%= form.submit class: "btn btn-primary" %>
      <%= link_to "Cancel", heading, class: 'btn btn-secondary' %>
    </div>
  <% end %>
</div>
