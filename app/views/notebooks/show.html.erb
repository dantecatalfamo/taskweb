<p style="color: green"><%= notice %></p>

<%= turbo_frame_tag "notebooks" do %>
  <nav>
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><%= link_to "Notebooks", notebooks_path %></li>
      <li class="breadcrumb-item active"><%= @notebook.title %></li>
    </ol>
  </nav>

  <%= render @notebook %>
<% end %>

<div>
  <%= link_to "Edit this notebook", edit_notebook_path(@notebook) %> |
  <%= link_to "Back to notebooks", notebooks_path %>

  <%= button_to "Destroy this notebook", @notebook, method: :delete %>
</div>
