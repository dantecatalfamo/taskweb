<%= turbo_frame_tag notebook do %>
  <% @notebook.headings.top_level.each do |heading| %>
    <%= render heading %>
  <% end %>

  <%= form_with(model: Heading.new(notebook_id: @notebook.id)) do |form| %>
    <%= form.text_field :title, placeholder: '+', autocomplete: 'off' %>
    <%= form.hidden_field :parent_id %>
    <%= form.hidden_field :notebook_id %>
  <% end %>
<% end %>
