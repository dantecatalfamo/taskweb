<%= turbo_frame_tag notebook do %>
  <% headings = @notebook.headings.includes(:state, :properties) %>
  <%= render collection: headings.top_level, partial: "headings/heading", cached: true %>

  <%= form_with(model: Heading.new(notebook_id: @notebook.id), html: { class: 'd-flex' }) do |form| %>
    <%= form.text_field :title, placeholder: '+', style: 'border: none', class: 'flex-grow-1', autocomplete: 'off' %>
    <%= form.hidden_field :parent_id %>
    <%= form.hidden_field :notebook_id %>
  <% end %>
<% end %>
