<%= form_with(model: heading_state) do |form| %>
  <% if heading_state.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(heading_state.errors.count, "error") %> prohibited this heading_state from being saved:</h2>

      <ul>
        <% heading_state.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-12 col-sm mb-2">
      <%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="col-auto mb-2 d-flex align-items-center">
      <%= form.label :color, class: "form-check-label me-1" %>
      <%= form.color_field :color, class: "form-input" %>
    </div>

    <div class="col-auto mb-2 d-flex align-items-center">
      <%= form.label :done, class: "form-check-label me-1" %>
      <%= form.check_box :done, class: "form-check-input" %>
    </div>

    <div class="col-12">
      <%= form.submit class: "btn btn-primary" %>
      <%= link_to "Cancel", heading_states_path(heading_state), class: "btn btn-outline-secondary" %>
    </div>
  </div>
<% end %>
